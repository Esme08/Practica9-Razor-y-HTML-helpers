@{
}

<h1>Mantenimiento de equipos</h1>
<br />
<form asp-action="CrearEquipos">
    @*Inicio del formulario*@

    <div class="form-group row mb-4">

        <div class="col-sm-2">
            <label>Nombre</label>
        </div>
        <div class="col-sm-4">
            @Html.TextBox("Nombre", "", new {@class="form-control"})
        </div>
        <div class="col-sm-2">
            @Html.Label("lblDescripcion", "Descripción")
        </div>
        <div class="col-sm-4">
            @Html.TextArea("Descripcion", "", new { @class = "form-control", @placeHolder="Ingrese la descripción"})
        </div>
        <div class="col-sm-2">
            @Html.Label("lblMarca", "Marca:")
        </div>
        <div class="col-sm-4">
            @Html.DropDownList("marca_id", ViewData["ListadoDeMarcas"] as SelectList, "Seleccione una marca", new{@class = "form-control"})
        </div>
        <div class="form-group row mb-4">
            <div class="col-sm-2"></div>
            <div>
                <input type="submit" class="btn btn-primary" value="Guardar"/>
            </div>
        </div>
        <table class="table table-striped">

            <thead>
                <tr>
                    <th>Equipo</th>
                    <th>Descripción</th>
                    <th>Marca</th>
                    <th>Id Marca</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var equipo in (IEnumerable<dynamic>)ViewData["listadoEquipo"])
                {
                    <tr>

                        <td>@equipo.nombre</td>
                        <td>@equipo.descricion</td>
                        <td>@equipo.marca_id</td>
                        <td>@equipo.marca_nombre</td>

                    </tr>
                }

            </tbody>

        </table>
    </div>

    @*Fin del formulario*@
</form>